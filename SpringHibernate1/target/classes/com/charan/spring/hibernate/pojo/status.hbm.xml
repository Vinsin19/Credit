<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.charan.spring.hibernate.pojo.status" table = "status">
      
      <meta attribute = "class-description">
         This class contains the status detail. 
      </meta>
      
      
       <id name = "id" column = "id" type = "int">
      <generator class="native"></generator>
      </id>
      <property name = "uid" column = "uid" type = "string"/>
      <property name = "app_id" column = "app_id" type = "string"/>
      <property name = "app_dt" column = "app_dt" type = "string"/>
      <property name = "stat" column = "stat" type = "string"/>
      
     </class>
 </hibernate-mapping>   